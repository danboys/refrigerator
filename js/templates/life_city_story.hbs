
<div class="area_contents">
	<div class="box_header">
		<h2 class="contents_title">물과도시</h2>
		<a href="http://m.water.or.kr/life/city/city01.do" class="btn">더보기 <span class="sprite sprite_common right_sprite icon_more"></span></a>
	</div>
	<div class="box_contents">
		<div class="grid_inner">
			<!-- 기로형 이미지 리스트 ( 텍스트 영역 3줄 ) -->
			<ul class="wa_thumbnail_horz_list col3">
				{{#each cityStory.list}}
					{{#isRange @index 0 4}}
						<li>
							<a href="http://m.water.or.kr/life/city/city01_detail.do?CITY_SEQNO={{city_SEQNO}}">
								<div class="list_img">
									<img src="{{removehttp thumurl}}" alt="">
								</div>
								<div class="list_info">
									<p class="list_title">{{title}}</p>
									<p class="list_txt">{{cont}}</p>
								</div>
							</a>
						</li>
					{{/isRange}}
				{{/each}}

			</ul> <!-- //기로형 이미지 리스트 ( 텍스트 영역 3줄 ) -->
		</div>
	</div>
</div>